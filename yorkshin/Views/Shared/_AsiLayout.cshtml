@{
    var identity = Context.Session.GetString("Identity");
    var uName = Context.Session.GetString("UName");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/yorkshin.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>

    <!--search bar icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

    <!--for using bootstrap icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//fonts.googleapis.com/earlyaccess/notosanstc.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
<header>
    @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black box-shadow mb-3"> *@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow fixed-top">
        <div class="container-fluid " style="display: flex; justify-content: space-between; width: 90%">
            <div>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="LandingPage" style="letter-spacing: 3px;font-weight: 100">NCU SECONDHAND</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <ul class="navbar-nav" style="display: flex;align-items: flex-end">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Book" asp-action="BookListPage">個人賣場</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Book" asp-action="OrderRecordPage">訂單紀錄</a>
                </li>
                @if (identity == "admin")
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Classification" asp-action="ClassifyByManager">管理員書籍分類</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Classification" asp-action="ClassifyByUser">書籍分類</a>
                </li>
                <li>
               <li class="nav-item dropdown">
                   <a style="color: white" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                       @uName 個人帳戶
                   </a>
                   <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                       <li><a class="dropdown-item" href="/User/UserPage">個人資訊</a></li>
                       <li><hr class="dropdown-divider"></li>
                       <li><a class="dropdown-item" href="/User/Logout">登出</a></li>
                   </ul>
               </li>
            </ul>
        </div>
    </nav>
</header>
<div id="body" class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/Scripts/site.js" asp-append-version="true"></script>
<!-- 在头部的script标签下引入Bootstrap的JS文件 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>